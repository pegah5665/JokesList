<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_50"

        app:srcCompat="@drawable/joke1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_marginLeft="@dimen/padding_28"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_50"

        app:srcCompat="@drawable/joke4"
        android:layout_marginRight="@dimen/padding_28"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/padding_10"
        app:layout_constraintBottom_toTopOf="@+id/txtDetaile"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="@dimen/padding_8"
        app:layout_constraintHorizontal_bias="0.995" />

    <TextView
        android:id="@+id/txtDetaile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="TextView"
        android:textColor="@color/bluedarker"
        android:layout_marginLeft="@dimen/padding_153"
        android:layout_marginRight="@dimen/padding_8"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/padding_153"
        android:layout_marginEnd="@dimen/padding_8"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="@dimen/padding_8"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.8" />



</android.support.constraint.ConstraintLayout>